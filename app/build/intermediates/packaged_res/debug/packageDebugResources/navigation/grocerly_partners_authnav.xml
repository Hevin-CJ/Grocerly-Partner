<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grocerly_partners_authnav"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/signUp"
        android:name="com.example.grocerlypartners.fragments.SignUp"
        android:label="SignUp" >
        <action
            android:id="@+id/action_signUp_to_login"
            app:destination="@id/login" />
    </fragment>
    <fragment
        android:id="@+id/login"
        android:name="com.example.grocerlypartners.fragments.Login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >

        <action
            android:id="@+id/action_login_to_signUp"
            app:destination="@id/signUp"
            />

        <action android:id="@+id/action_login_to_mainnav"
            app:destination="@+id/grocerly_partners_mainnav"
            app:popUpTo="@null"
            app:popUpToInclusive="true"
            />

    </fragment>
   <include app:graph="@navigation/grocerly_partners_mainnav"/>
</navigation>