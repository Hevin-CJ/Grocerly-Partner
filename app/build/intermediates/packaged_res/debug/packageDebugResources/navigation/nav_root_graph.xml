<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_root_graph"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/splash"
        android:name="com.example.grocerlypartners.fragments.Splash"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">


        <action
            android:id="@+id/action_splash_to_grocerly_partners_mainnav"
            app:destination="@id/grocerly_partners_mainnav"
            app:popUpTo="@id/splash"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/action_splash_to_grocerly_partners_authnav"
            app:destination="@id/grocerly_partners_authnav"
            app:popUpTo="@id/splash"
            app:popUpToInclusive="true"
            />
    </fragment>

    <include app:graph="@navigation/grocerly_partners_authnav"/>
    <include app:graph="@navigation/grocerly_partners_mainnav"/>
</navigation>